<div class="container-fluid">
    <script src="https://yastatic.net/es5-shims/0.0.2/es5-shims.min.js"></script>
    <script src="https://yastatic.net/share2/share.js" async="async"></script>


    {{#each months}}
    <h4 class="text-center mb-3">{{this.name}}</h4>

    {{#each this.concerts}}
    <div class="row event-row">


        <div class="concert col-xl-8 col-md-10 offset-xl-2 offset-md-1 col-10 offset-1">
            <div id="{{this.id}}" class="row">

                <div class="col-12 col-md-4 p-0">
                    <img class="poster" loading=lazy  src="/img/posters/{{this.id}}.jpg" alt="">
                </div>
                <div class="col-12 col-md-8 p-4">
                    <p>{{this.title}}</p>
                    <pre>{{this.description}}</pre>

                    {{#if this.ticket}}
                    <a class="btn buy btn-sm btn-success mb-3" href="{{this.ticket}}">{{../../__ 'events.buy'}}</a>
                    {{/if}}
                    <div class="ya-share2 ml-4" data-image="http://belsco.net/img/posters/{{this.id}}.jpg"
                        data-title="{{this.title}}" data-url="http://belsco.net/events#{{this.id}}"
                        data-services="vkontakte,twitter,facebook,odnoklassniki,viber,telegram"></div>
                    <div class="concert-day d-none d-md-block">{{this.day}}</div>
                    <div class="concert-time">{{this.time}}</div>
                    <div class="concert-place">{{this.place}}</div>
                </div>
            </div>
        </div>


    </div>
    {{/each}}

    {{/each}}

    <div class="container">
        <div class="block row my-1">
            <div class="col-1 p-0 mb-3 mt-0">
                <img class="musicians-pic"
                    src="data:image/png;base64," />
            </div>
            <div class="col-11 px-4 py-1">
                <p>
                    {{__ 'contacts.tickets'}}
                </p>
            </div>

        </div>
    </div>


</div>