<div class="container-fluid">

    <div class="ml-auto my-3" >
        <form action="/admin/press/upload" method="post" enctype="multipart/form-data">
            <input class='form-control' type="file" name="fileToUpload" id="fileToUpload">
            <input disabled="true" class='form-control' type="submit" value="Загрузить изображение" name="submit">
        </form>

    </div>
    


    <div>
        <div class="card-columns">
            {{#each names}}
            <div class="card searchable"> <img class="card-img-top" loading=lazy src="/img/press/{{this}}.jpg" alt="Card image cap">
                <div class="card-footer">
                    <p>{{this}}</p>                 
                        <input id="/img/press/{{this}}.jpg" class='delete-button form-control' type="submit" value="Удалить"></input>
                    
                </div>
            </div>
            {{/each}}
        </div>

    </div>


<script>

$(document).ready(function(){
  $(".delete-button").click(function(){
      $(this).parent().parent().css('display','none');
    $.post("/admin/press/delete", {filename:$(this).attr('id')});
  });

  $("#fileToUpload").change(function(){
      if ($(this).val().length>0){
            $(this).siblings('.form-control').prop('disabled', false);

      }
  });
});




</script>


</div>