<div class="container-fluid">

    <div class="ml-auto my-3" >
        <form action="/admin/composers/upload" method="post" enctype="multipart/form-data">
            <input class='form-control' type="file" name="fileToUpload" id="fileToUpload">
            <input class='form-control' type="submit" value="Загрузить изображение" name="submit">
        </form>

    </div>
    


    <div>
        <div class="card-columns">
            {{#each names}}
            <div class="card "> <img class="card-img-top" src="/img/about/composers/{{this}}.jpg" alt="Card image cap">
                <div class="card-footer">
                    <p>{{this}}</p>                 
                        <input id="/img/about/composers/{{this}}.jpg" class='delete-button form-control' type="submit" value="Удалить"></input>
                    
                </div>
            </div>
            {{/each}}
        </div>

    </div>


<script>

$(document).ready(function(){
  $(".delete-button").click(function(){
      $(this).parent().parent().css('display','none');
    $.post("/admin/composers/delete", {filename:$(this).attr('id')});
  });
});
</script>


</div>