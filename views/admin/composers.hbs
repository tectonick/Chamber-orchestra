<div class="ml-auto my-3">
    <form action="/admin/composers/add" method="post">
        <input class='form-control' type="submit" value="Добавить композитора" name="submit">
    </form>

</div>
<div class="row">

    {{#each composers}}
    <div rowId="{{this.id}}" class="row col-lg-6 col-xl-4 col-12 searchable event-row">


        <div class="concert col-11 offset-1">
            <div class="row">
                <div class="col-12 col-md-4 p-0">
                    <img class="poster" loading=lazy src="/img/about/composers/{{this.id}}.jpg" alt="">
                    <form class="form-group" action="/admin/composers/posterupload" method="post"
                        enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input class='form-control fileToUpload' type="file" name="fileToUpload">
                    </form>
                </div>
                <div class="col-12 col-md-8 p-4 form-container">

                    <form class='form-group' action="/admin/composers/edit" id="edit-form-{{this.id}}" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <textarea name="name" class="form-control w-100" placeholder="Имя"
                            rows="1">{{this.name}}</textarea>
                        <textarea name="country" class="form-control w-100" placeholder="Страна"
                            rows="1">{{this.country}}</textarea>
                        <div class="form-check">
                            <input type="checkbox" name="isInResidence" value='1' {{#if this.isInResidence}}
                                checked{{else}}{{/if}}>
                            <label class="form-check-label" for="isInResidence">Композитор-inresidence</label>
                        </div>
                    </form>

                    <form action="/admin/composers/translate" method="post" id="translate-form-{{this.id}}">
                        <div class="form-group">
                            <input type="hidden" name="id" value="{{this.id}}">
                        </div>
                    </form>
                    <input name='translate-form-{{this.id}}' class='translate-button form-control' type="submit"
                        value="Перевести на остальные языки"></input>

                </div>

                <div class="col-12">
                    <div class="form-group">
                        <input name='{{this.id}}' class='delete-button form-control' class="btn btn-sm btn-secondary"
                            type="submit" value="Удалить композитора"></input>
                        <input name='edit-form-{{this.id}}' class='save-button form-control' type="submit"
                            value="Сохранить композитора"></input>

                    </div>

                </div>
            </div>
        </div>


    </div>
    {{/each}}




{{> deleteModal}}


</div>







<script type="text/javascript" src="https://code.jquery.com/color/jquery.color-2.1.2.js"></script>
<script type="text/javascript" src="/scripts/admin.js"></script>
<script>
    $(document).ready(function () {
        posterUploadSetEvent('/admin/composers/posterupload');
        deleteWithModalSetEvent('/admin/composers/delete');
        saveSetEvent("/admin/composers/edit");
        translateSetEvent('/admin/composers/translate');
    });

</script>