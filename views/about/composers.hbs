<div class="artists">
    <h4 class="text-center mb-3">{{__ 'composers.title'}}</h4>
    <br>

    <h5 class="text-center mb-3">{{__ 'composers.inResidence'}}</h5>
    <div class="card-columns">
       
        {{#each composers.InResidence}}
        <div class="card"> <img class="card-img-top" loading=lazy src="/img/about/composers/{{this.id}}.jpg" alt="Card image cap">
            <div class="card-footer">
                <p>{{this.name}} ({{this.country}})</p>
            </div>
        </div>
        {{/each}}     
    </div>
    <br>

    <h5 class="text-center mb-3">{{__ 'composers.Partners'}}</h5>
    <div class="card-columns">        
        {{#each composers.Partners}}
        <div class="card"> <img class="card-img-top" loading=lazy src="/img/about/composers/{{this.id}}.jpg" alt="Card image cap">
            <div class="card-footer">
                <p>{{this.name}} ({{this.country}})</p>
            </div>
        </div>
        {{/each}}     
    </div>

</div>