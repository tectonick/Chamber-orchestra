<div class="separator container"><h3>{{__ 'history.musicians'}}</h3></div>

        <div class="block mb-3 col-12" id="allMusicians">
            
            <ol id='allMusiciansList'>

            </ol>
        </div>
    </div>
</div>


<script>
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
    }

    $(document).ready(function () {
        var lang = getCookie('locale');
        if (lang==undefined) {lang='en'};
        $("#text-container").load(`/html/history_${lang}.html`);
        $("#allMusiciansList").load(`/html/musicians_${lang}.html`);

    });

</script>